<%- include("header2"); -%>

<form class="input-user-details" method="post" action="/forgotPassword">
  <div class="align-items-center col-sm-4 m-auto mt-5">
    <div class=" my-3">
      <label for="searchEmail" class="form-label">Enter your registered email address</label>
      <input type="email" class="form-control" id="email" name="email" placeholder="Email Address*">
    </div>
    <div class="mt-3">
      <button type="submit" class="btn btn-outline-dark" id="resetPassword">Reset Password</button>
    </div>
    <div class="error"> <%= forgotInfo %> </div>
  </div>
</form>

<%- include("footer"); -%>